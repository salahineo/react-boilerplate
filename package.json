    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.5.2",
    "react-router-dom": "^7.12.0",
    "tailwindcss": "^4.1.18",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tanstack/react-query-devtools": "^5.91.2",
